<Window x:Class="NZMHelper.MatchDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="对局详情" Height="850" Width="1280"
        Background="{DynamicResource WindowBackgroundBrush}" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <DataTemplate x:Key="WeaponTemplate">
            <StackPanel Margin="5">
                <Border Width="120" Height="80" Background="#33000000" BorderBrush="{Binding QualityColor}" BorderThickness="1" CornerRadius="4" Margin="0,0,0,5">
                    <Grid>
                        <Border HorizontalAlignment="Right" VerticalAlignment="Top" Background="{Binding QualityColor}" CornerRadius="0,2,0,4" Padding="4,1">
                            <TextBlock Text="{Binding QualityText}" Foreground="White" FontSize="9" FontWeight="Bold"/>
                        </Border>
                        <Image Source="{Binding Icon}" Margin="10,12,10,20"/>
                        <TextBlock Text="{Binding Name}" Foreground="{Binding QualityColor}" FontSize="9" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,4" TextTrimming="CharacterEllipsis"/>
                    </Grid>
                </Border>
                <ItemsControl ItemsSource="{Binding Plugins}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="2" Width="58">
                                <Border Background="#33000000" CornerRadius="4" BorderThickness="1" BorderBrush="{Binding QualityColor}" Height="50" Margin="0,0,0,2">
                                    <Image Source="{Binding Icon}" Margin="4"/>
                                </Border>
                                <TextBlock Text="{Binding Name}" Foreground="{DynamicResource TextSubBrush}" FontSize="9" TextAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.RowSpan="2" Visibility="{DynamicResource GlassBackgroundVisibility}" ZIndex="-1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF0F0C29" Offset="0.0"/>
                    <GradientStop Color="#FF302B63" Offset="0.5"/>
                    <GradientStop Color="#FF24243E" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Canvas>
                <Ellipse Width="700" Height="700" Canvas.Right="-200" Canvas.Bottom="-200" Opacity="0.5">
                    <Ellipse.Fill>
                        <RadialGradientBrush Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                            <GradientStop Color="#FF4361EE" Offset="0"/>
                            <GradientStop Color="#004361EE" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <BlurEffect Radius="120"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Canvas>
            <Border Background="#11FFFFFF"/>
        </Grid>

        <Border Grid.Row="0" Background="{DynamicResource NavBgBrush}" Padding="20,15" BorderBrush="{DynamicResource DividerBrush}" BorderThickness="0,0,0,1">
            <TextBlock Text="对局详细数据" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextMainBrush}"/>
        </Border>

        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel>
                <TextBlock x:Name="TxtLoading" Text="正在加载..." Foreground="{DynamicResource TextSubBrush}" HorizontalAlignment="Center" Margin="0,20"/>

                <ItemsControl x:Name="PlayerList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}" Margin="5">
                                <StackPanel>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="50" Height="50" CornerRadius="25" ClipToBounds="True" VerticalAlignment="Center">
                                            <Image Source="{Binding Avatar}" Stretch="UniformToFill"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                            <TextBlock Text="{Binding Nickname}" Foreground="{DynamicResource TextMainBrush}" FontWeight="Bold" FontSize="15" Margin="0,0,0,3"/>
                                            <UniformGrid Columns="3">
                                                <TextBlock Text="{Binding ScoreText}" Foreground="{DynamicResource YellowBrush}" FontSize="12" Margin="0,2"/>
                                                <TextBlock Text="{Binding BossDmgText}" Foreground="{DynamicResource TextSubBrush}" FontSize="12" Margin="0,2"/>

                                                <TextBlock Text="{Binding KDAText}" Foreground="{DynamicResource AccentBrush}" FontSize="12" Margin="0,2" FontWeight="Bold"/>

                                                <TextBlock Text="{Binding MobsDmgText}" Foreground="{DynamicResource TextSubBrush}" FontSize="12" Margin="0,2"/>
                                                <TextBlock Text="{Binding CoinText}" Foreground="{DynamicResource TextSubBrush}" FontSize="12" Margin="0,2"/>
                                            </UniformGrid>
                                        </StackPanel>
                                    </Grid>
                                    <Expander Header="配装详情" Foreground="{DynamicResource TextSubBrush}" IsExpanded="False">
                                        <ItemsControl ItemsSource="{Binding Weapons}" Margin="0,10,0,0" ItemTemplate="{StaticResource WeaponTemplate}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </Expander>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border x:Name="SelfStatsBar" Background="#CC111827" CornerRadius="8" Padding="20" Margin="5,20,5,0" Visibility="Collapsed" BorderBrush="{DynamicResource DividerBrush}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="80">
                            <Border Width="60" Height="60" CornerRadius="30" ClipToBounds="True" HorizontalAlignment="Center">
                                <Image Source="{Binding SelfAvatar}" Stretch="UniformToFill"/>
                            </Border>
                            <TextBlock Text="{Binding SelfName}" Foreground="{DynamicResource TextMainBrush}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>

                        <UniformGrid Grid.Column="1" Rows="1" Margin="20,0">
                            <StackPanel>
                                <TextBlock Text="积分" Foreground="{DynamicResource TextSubBrush}" FontSize="12"/>
                                <TextBlock Text="{Binding SelfScore}" Foreground="{DynamicResource TextMainBrush}" FontSize="20" FontWeight="Bold" FontFamily="Impact"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="BOSS伤害" Foreground="{DynamicResource TextSubBrush}" FontSize="12"/>
                                <TextBlock Text="{Binding SelfBossDmg}" Foreground="{DynamicResource RedBrush}" FontSize="20" FontWeight="Bold" FontFamily="Impact"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="金币" Foreground="{DynamicResource TextSubBrush}" FontSize="12"/>
                                <TextBlock Text="{Binding SelfCoin}" Foreground="{StaticResource GreenBrush}" FontSize="20" FontWeight="Bold" FontFamily="Impact"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="击杀 / 死亡" Foreground="{DynamicResource TextSubBrush}" FontSize="12"/>
                                <TextBlock Text="{Binding SelfKDA}" Foreground="{DynamicResource AccentBrush}" FontSize="20" FontWeight="Bold" FontFamily="Impact"/>
                            </StackPanel>
                        </UniformGrid>

                        <Button Grid.Column="2" Content="查看配装" Click="BtnToggleSelfEquip_Click" Background="#33FFFFFF" Height="32" VerticalAlignment="Top"/>
                    </Grid>
                </Border>

                <ItemsControl x:Name="SelfEquipList" Visibility="Collapsed" Margin="5,10,5,0" ItemTemplate="{StaticResource WeaponTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>