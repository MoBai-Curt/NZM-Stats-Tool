<Window x:Class="NZMHelper.NoticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="公告" Height="450" Width="550"
        Background="{StaticResource BgBrush}" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True">

    <Border Background="{StaticResource BgBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" CornerRadius="8">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="用户协议 &amp; 公告" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>

            <ScrollViewer Grid.Row="1" Margin="0,20">
                <StackPanel>
                    <TextBlock Text="欢迎使用 NZM 战绩助手" Foreground="{StaticResource AccentBrush}" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    <TextBlock x:Name="TxtContent" TextWrapping="Wrap" Foreground="{StaticResource TextMainBrush}" FontSize="14" LineHeight="24">
                        正在获取远程公告...
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>

            <Button Grid.Row="2" Content="我已阅读并同意" Click="BtnAgree_Click" Height="45" Width="200" FontSize="16" FontWeight="Bold"/>
        </Grid>
    </Border>
</Window>