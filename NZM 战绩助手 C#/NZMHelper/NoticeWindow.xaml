<Window x:Class="NZMHelper.NoticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="使用说明 &amp; 公告" Height="550" Width="450"
        Background="{StaticResource BgBrush}" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="关于 &amp; 说明" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

            <Border Background="{StaticResource CardBgBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="⚠️" VerticalAlignment="Center"/>
                        <TextBlock Text="数据说明" Foreground="White" FontWeight="Bold" Margin="25,0,0,0"/>
                    </Grid>
                    <TextBlock Text="官方数据为历史总计（不含机甲）。详细分析基于最近 30 天 / 100 场游戏记录。" Foreground="#94a3b8" TextWrapping="Wrap" Margin="25,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="{StaticResource CardBgBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="🕒" VerticalAlignment="Center"/>
                        <TextBlock Text="过期机制" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" Margin="25,0,0,0"/>
                    </Grid>
                    <TextBlock Text="本地保存的Cookie将在 24小时 后自动过期，需重新登录。" Foreground="#94a3b8" TextWrapping="Wrap" Margin="25,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="{StaticResource CardBgBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="🚫" VerticalAlignment="Center"/>
                        <TextBlock Text="严禁盗卖" Foreground="{StaticResource RedBrush}" FontWeight="Bold" Margin="25,0,0,0"/>
                    </Grid>
                    <TextBlock Text="倒卖死全家 倒卖死全家 倒卖死全家 （重要的事情说三遍）" Foreground="#94a3b8" TextWrapping="Wrap" Margin="25,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#0B1120" BorderThickness="1" BorderBrush="#334155" CornerRadius="8" Padding="20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="作者信息" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <TextBlock Text="作者: MoBai" Foreground="#94a3b8" HorizontalAlignment="Center"/>
                    <TextBlock Text="QQ: 113333914" Foreground="#94a3b8" HorizontalAlignment="Center"/>
                    <TextBlock Text="Blog: http://mobaiya.icu/" Foreground="#94a3b8" HorizontalAlignment="Center"/>
                    <TextBlock Text="原作者: HaMan412" Foreground="#94a3b8" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="开源地址 (GitHub)" Click="BtnMyGithub_Click" Background="Transparent" Foreground="{StaticResource AccentBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Width="120" Height="30" Margin="0,0,10,0"/>
                        <Button Content="原作者 GitHub" Click="BtnOriginGithub_Click" Background="Transparent" Foreground="{StaticResource AccentBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Width="120" Height="30"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>