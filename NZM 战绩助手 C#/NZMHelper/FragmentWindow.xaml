<Window x:Class="NZMHelper.FragmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="碎片进度" Height="400" Width="300"
        Background="{DynamicResource WindowBackgroundBrush}"
        Topmost="True" WindowStartupLocation="Manual" 
        WindowStyle="ToolWindow" ResizeMode="CanResizeWithGrip" ShowInTaskbar="False">

    <Grid>
        <Grid Visibility="{DynamicResource GlassBackgroundVisibility}" ZIndex="-1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF0F0C29" Offset="0.0"/>
                    <GradientStop Color="#FF302B63" Offset="0.5"/>
                    <GradientStop Color="#FF24243E" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Canvas>
                <Ellipse Width="300" Height="300" Canvas.Left="-50" Canvas.Top="-50" Opacity="0.6">
                    <Ellipse.Fill>
                        <RadialGradientBrush Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                            <GradientStop Color="#FF7B2CBF" Offset="0"/>
                            <GradientStop Color="#007B2CBF" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <BlurEffect Radius="80"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Canvas>
            <Border Background="#11FFFFFF"/>
        </Grid>

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="碎片实时监控" Foreground="{DynamicResource TextMainBrush}" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="数据自动刷新 · 窗口置顶" Foreground="{DynamicResource TextSubBrush}" FontSize="12" Margin="0,2,0,0"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="FragmentList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBgBrush}" CornerRadius="8" Margin="0,0,0,10" Padding="10" BorderThickness="1" BorderBrush="{DynamicResource CardBorderBrush}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border CornerRadius="6" ClipToBounds="True" BorderBrush="{Binding QualityColor}" BorderThickness="1" Width="45" Height="45" Background="#111">
                                        <Image Source="{Binding Icon}" Stretch="Uniform"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                                        <TextBlock Text="{Binding Name}" Foreground="{Binding QualityColor}" FontWeight="Bold" FontSize="13" Margin="0,0,0,6"/>
                                        <Grid>
                                            <ProgressBar Value="100" Maximum="100" Height="6" Background="Transparent" Foreground="{DynamicResource DividerBrush}" BorderThickness="0"/>
                                            <ProgressBar Value="{Binding ProgressPercent}" Maximum="100" Height="6" Background="Transparent" Foreground="{StaticResource GreenBrush}" BorderThickness="0"/>
                                            <TextBlock Text="{Binding ProgressText}" Foreground="{DynamicResource TextMainBrush}" FontSize="11" HorizontalAlignment="Right" Margin="0,-18,0,0"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <TextBlock x:Name="TxtEmpty" Grid.Row="1" Text="暂无推荐数据" Foreground="{DynamicResource TextSubBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>