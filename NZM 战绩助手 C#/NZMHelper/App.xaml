<Application x:Class="NZMHelper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BgBrush" Color="#0f172a"/>
        <SolidColorBrush x:Key="CardBgBrush" Color="#1e293b"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3b82f6"/>
        <SolidColorBrush x:Key="TextMainBrush" Color="#ffffff"/>
        <SolidColorBrush x:Key="TextSubBrush" Color="#94a3b8"/>

        <SolidColorBrush x:Key="GreenBrush" Color="#10b981"/>
        <SolidColorBrush x:Key="RedBrush" Color="#ef4444"/>
        <SolidColorBrush x:Key="YellowBrush" Color="#f59e0b"/>

        <SolidColorBrush x:Key="LegendaryBrush" Color="#d4a84b"/>
        <SolidColorBrush x:Key="EpicBrush" Color="#a855f7"/>
        <SolidColorBrush x:Key="RareBrush" Color="#3b82f6"/>
        <SolidColorBrush x:Key="CommonBrush" Color="#10b981"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>